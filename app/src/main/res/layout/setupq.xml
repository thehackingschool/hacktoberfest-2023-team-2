<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/normal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How many hours of sleep do you get usually?"
        android:textSize="26dp"
        android:textColor="@color/secondary"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_sans"/>


    <TextView
        android:id="@+id/sleep_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:fontFamily="@font/nunito_sans"
        android:textColor="@color/secondary"
        android:textSize="40dp"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>



    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/sleep_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:thumbTint="@color/secondary"
        android:progressBackgroundTint="@color/secondary"
        android:layout_below="@+id/sleep_no"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@drawable/ques_back"
        android:text="Next"
        android:padding="10dp"
        android:textSize="26dp"
        android:textColor="@color/secondary"
        android:layout_below="@+id/sleep_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

</RelativeLayout>
