<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTaskActivity"
    android:background="@drawable/journal_background">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a new task"
        android:fontFamily="@font/nunito_sans"
        android:textSize="30dp"
        android:textColor="@color/secondary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/taskBox"
            android:layout_below="@+id/title"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginHorizontal="20dp"
            android:hint="Task Title"
            android:textColor="@color/black"


            android:layout_centerVertical="true"
            android:background="@drawable/rounded_corner"
            android:inputType="textPersonName"
            android:backgroundTint="#F6F6F6"/>


    <LinearLayout
        android:id="@+id/date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/taskBox">

        <LinearLayout
            android:id="@+id/dateTxt"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Task Date"
                android:fontFamily="@font/nunito_sans"
                android:textColor="@color/secondary"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:layout_below="@+id/date_title"
                android:fontFamily="@font/nunito_sans"
                android:textColor="@color/secondary"
                android:textSize="18dp"
                />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/selectDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/primary_btn"
            android:text="Choose Date"
            android:textAllCaps="false"
            android:backgroundTint="@color/accent"
            android:layout_marginStart="10dp"
            android:textColor="@color/secondary"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />





    </LinearLayout>

    <LinearLayout
        android:id="@+id/time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/date_layout">

        <LinearLayout
            android:id="@+id/timeTxt"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Task Time"
                android:fontFamily="@font/nunito_sans"
                android:textColor="@color/secondary"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:layout_below="@+id/date_title"
                android:fontFamily="@font/nunito_sans"
                android:textColor="@color/secondary"
                android:textSize="18dp"
                />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/selectTime"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/primary_btn"
            android:text="Choose Time"
            android:textAllCaps="false"
            android:backgroundTint="@color/accent"
            android:layout_marginStart="10dp"
            android:textColor="@color/secondary"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />





    </LinearLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/descBox"
        android:layout_below="@+id/time_layout"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="15dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Task Description"
        android:textColor="@color/black"


        android:layout_centerVertical="true"
        android:background="@drawable/rounded_corner"
        android:inputType="textPersonName"
        android:backgroundTint="#F6F6F6"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/primary_btn"
            android:text="Add"
            android:backgroundTint="@color/accent"
            android:layout_marginStart="10dp"
            android:textColor="@color/secondary"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/secondary_btn"
            android:text="Cancel"

            android:layout_marginStart="10dp"
            android:textColor="@color/secondary"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />



    </LinearLayout>



</RelativeLayout>